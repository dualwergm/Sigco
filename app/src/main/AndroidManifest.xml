        <activity android:name=".detail.view.NewDetailActivity" />
        <activity android:name=".login.view.UsersActivity" />
        <activity android:name=".login.view.CreateUserActivity" />
        <activity android:name=".parameter.view.ServerActivity" />
        <activity android:name=".summary.view.SummaryKtActivity" />
